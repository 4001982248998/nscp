<?xml version='1.0' encoding='windows-1252'?>
<Wix xmlns="http://schemas.microsoft.com/wix/2003/01/wi">
  <Fragment>
    <UI>
      <Dialog Id="OldConfigureDlg" Width="370" Height="270" Title="[ProductName] [Setup]" NoMinimize="yes">

        <Control Id="WhichConfigOption" Type="RadioButtonGroup" X="45" Y="53" Width="260" Height="45" Property="KEEP_WHICH_CONFIG">
          <RadioButtonGroup Property="KEEP_WHICH_CONFIG">
            <RadioButton Value="OLD" X="0" Y="0" Width="250" Height="16" Text="Use the old configuration file" />
            <RadioButton Value="NEW" X="0" Y="20" Width="295" Height="16" Text="Use the new configuration file" />
          </RadioButtonGroup>
		  <Condition Action="disable">CONF_OLD_NOT_FOUND = "1"</Condition>
		  <Condition Action="enable">CONF_OLD_NOT_FOUND = "0"</Condition>
        </Control>

        <Control Id="HelpTextOld" Type="Text" X="45" Y="100" Width="260" Height="40" Hidden="no" Transparent="yes" NoPrefix="yes">
          <Text>If you choose the old configuration the new one will be renamed to nsc.new. You will not be able to make any configuration changes in this installer</Text>
        </Control>
        <Control Id="HelpTextNew" Type="Text" X="45" Y="140" Width="260" Height="100" Hidden="no" Transparent="yes" NoPrefix="yes">
          <Text>If you choose the new configuration the old one (if found) will be renamed to nsc.old. And you will be able to configure some basics settings which will be imported from the old. NOTICE this is experimental and may not always work so you should check and edit the config afterwards!</Text>
        </Control>
		
		
        <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="&amp;Back">
          <Publish Event="NewDialog" Value="[WixUI_OldConfigureDlgBack]">1</Publish>
        </Control>
        <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="&amp;Next">
          <Publish Event="NewDialog" Value="[WixUI_OldConfigureDlgNext]">1</Publish>
        </Control>
        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="Cancel">
          <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
        </Control>
        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="WixUI_Bmp_Banner" />

		
        <Control Id="Description" Type="Text" X="25" Y="23" Width="280" Height="15" Hidden="yes" Transparent="yes" NoPrefix="yes">
          <Text>Which configuration file do you want to use?</Text>
        </Control>

        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />
        <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes">
          <Text>{\WixUI_Font_Title}NSClient++ Configuration</Text>
        </Control>
        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
      </Dialog>
    </UI>
  </Fragment>
</Wix>
