FIND_PATH(LUA_INCLUE_DIR lua.h
	${LUA_SOURCE_DIR}
	${LUA_SOURCE_DIR}/src
	${LUA_ROOT}
	${LUA_ROOT}/src
	/usr/include/lua
	/usr/include/lua5.1
)
FIND_LIBRARY(LUA_LIB
	NAMES liblua5.1 lua5.1 lua
)
MARK_AS_ADVANCED(HAVE_LUA_LIBS)
IF(LUA_INCLUE_DIR)
	SET(HAVE_LUA TRUE)
	SET(LUA_FOUND TRUE)
	IF(LUA_LIB)
		SET(LUA_LIBS_FOUND TRUE)
	ELSE(LUA_LIB)
		SET(LUA_LIBS_FOUND FALSE)
	ENDIF(LUA_LIB)
	SET(LUA_SOURCE_DIR ${LUA_INCLUE_DIR})
ELSE(LUA_INCLUE_DIR)
	SET(LUA_FOUND FALSE)
	SET(LUA_FOUND FALSE)
ENDIF(LUA_INCLUE_DIR)
